<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activities.Main.New.activityCreateFood">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/LinearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etxtName"
                android:textColor="@color/colorPrimary"
                android:hint="@string/hintName"
                android:textSize="14sp"
                android:textAlignment="textStart"
                android:inputType="textCapSentences"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etxtBrand"
                android:selectAllOnFocus="true"
                android:textColor="@color/colorPrimary"
                android:hint="@string/hintBrand"
                android:textSize="14sp"
                android:textAlignment="textStart"
                android:inputType="textCapSentences"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:inputType="number"
                android:ems="6"
                android:id="@+id/etxtCalories"

                android:textColor="?attr/colorPrimary"
                android:textAlignment="textStart"
                android:textSize="14sp"
                android:hint="@string/hintCalories"
                android:maxLength="10" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="6"
                android:id="@+id/etxtCarbs"
                android:textColor="@color/colorPrimary"
                android:textAlignment="textStart"
                android:textSize="14sp"
                android:maxLength="5"
                android:layout_weight="0.167"
                android:hint="@string/hintCarbs" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="6"
                android:id="@+id/etxtProtein"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView"
                android:textColor="@color/colorPrimary"
                android:textAlignment="textStart"
                android:inputType="numberDecimal"
                android:textSize="14sp"
                android:layout_weight="0.167"
                android:maxLength="4"
                android:hint="@string/hintProtein" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="6"
                android:id="@+id/etxtFat"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView3"
                android:textColor="@color/colorPrimary"
                android:textAlignment="textStart"
                android:inputType="numberDecimal"
                android:textSize="14sp"
                android:layout_weight="0.167"
                android:maxLength="5"
                android:hint="@string/hintFat" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <info.hoang8f.android.segmented.SegmentedGroup
                android:id="@+id/seggroupPortionType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:sc_border_width="2dp"
                app:sc_corner_radius="10dp">

                <RadioButton
                    android:id="@+id/rbtnServing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/serving"
                    style="@style/RadioButton"
                    android:checked="true"
                    android:layout_gravity="center_vertical|center_horizontal" />

                <RadioButton
                    android:id="@+id/rbtnWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weight"
                    style="@style/RadioButton"
                    android:layout_gravity="center_vertical|center_horizontal" />

            </info.hoang8f.android.segmented.SegmentedGroup>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                android:id="@+id/etxtServingNum"
                android:textAlignment="textStart"
                android:inputType="numberDecimal"
                android:textColor="?attr/colorPrimary"
                android:textSize="14sp"
                android:hint="@string/hintServing" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="6"
                android:id="@+id/etxtAmount"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView2"
                android:textColor="@color/colorPrimary"
                android:textAlignment="textStart"
                android:enabled="true"
                android:textSize="14sp"
                android:hint="@string/hintAmount" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerUnit"
                android:gravity="center_vertical|center" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
