<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activities.Main.New.activityCreateFood">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LinearLayout"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Name:"
                    android:id="@+id/lblName"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp" />

                <EditText
                    android:layout_width="215dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/etxtName"
                    android:selectAllOnFocus="true"
                    android:textColor="@color/colorPrimary"
                    android:hint="Name"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Brand:"
                    android:id="@+id/lblBrand"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp" />

                <EditText
                    android:layout_width="215dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/etxtBrand"
                    android:selectAllOnFocus="true"
                    android:textColor="@color/colorPrimary"
                    android:hint="(optional)"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Calories:"
                    android:id="@+id/lblCalories"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="4"
                    android:id="@+id/etxtCalories"
                    android:textColor="@color/CaloriesProgessColor"
                    android:textAlignment="textStart"
                    android:hint="0"
                    android:text=""
                    android:enabled="true"
                    android:textSize="17sp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Carbs:"
                    android:id="@+id/lblCarbs"
                    android:textColor="@color/colorPrimary"
                    android:textSize="17sp"
                    android:layout_weight="0.167" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="3"
                    android:id="@+id/etxtCarbs"
                    android:layout_alignParentTop="false"
                    android:textColor="@color/CarbProgressColor"
                    android:textAlignment="center"
                    android:hint="0"
                    android:inputType="numberDecimal"
                    android:textSize="17sp"
                    android:layout_weight="0.167" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Protein:"
                    android:id="@+id/lblProtein"
                    android:textColor="@color/colorPrimary"
                    android:textSize="17sp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="3"
                    android:id="@+id/etxtProtein"
                    android:layout_alignParentTop="false"
                    android:textColor="@color/ProteinProgessColor"
                    android:textAlignment="center"
                    android:hint="0"
                    android:inputType="numberDecimal"
                    android:textSize="17sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Fat:"
                    android:id="@+id/lblFat"
                    android:textColor="@color/colorPrimary"
                    android:layout_weight="0.167"
                    android:textSize="17sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="3"
                    android:id="@+id/etxtFat"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/textView3"
                    android:textColor="@color/FatProgessColor"
                    android:textAlignment="center"
                    android:hint="0"
                    android:inputType="numberDecimal"
                    android:layout_weight="0.167"
                    android:textSize="17sp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <info.hoang8f.android.segmented.SegmentedGroup
                    android:id="@+id/seggroupPortionType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    app:sc_border_width="2dp"
                    app:sc_corner_radius="10dp">

                    <RadioButton
                        android:id="@+id/rbtnServing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/serving"
                        style="@style/RadioButton"
                        android:checked="true"
                        android:layout_gravity="center_vertical|center_horizontal" />

                    <RadioButton
                        android:id="@+id/rbtnWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weight"
                        style="@style/RadioButton"
                        android:layout_gravity="center_vertical|center_horizontal" />

                </info.hoang8f.android.segmented.SegmentedGroup>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Serving #:"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblServingNum"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:textColor="?attr/colorPrimary"
                    android:layout_width="80dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="3"
                    android:id="@+id/etxtServingNum"
                    android:textAlignment="center"
                    android:hint="1"
                    android:text="1"
                    android:inputType="numberDecimal"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="17sp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <TextView
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Amount:"
                    android:id="@+id/lblAmount"
                    android:textColor="@color/colorPrimary"
                    android:textSize="17sp"
                    android:layout_width="80dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="3"
                    android:id="@+id/etxtAmount"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/textView2"
                    android:textColor="@color/colorPrimary"
                    android:textAlignment="center"
                    android:hint="100"
                    android:text="100"
                    android:enabled="true"
                    android:textSize="17sp" />

                <Spinner
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerUnit"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:textAlignment="viewStart" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter"
                    android:id="@+id/btnEnter"
                    android:layout_weight="1"
                    android:background="@drawable/btn_iifym_style"
                    tools:layout_editor_absoluteY="16dp"
                    tools:layout_editor_absoluteX="0dp"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:id="@+id/btnCancel"
                    android:layout_weight="1"
                    android:background="@drawable/btn_iifym_style"
                    tools:layout_editor_absoluteY="16dp"
                    tools:layout_editor_absoluteX="0dp"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
