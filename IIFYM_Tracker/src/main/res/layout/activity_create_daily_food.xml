<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activities.Main.New.activityCreateDailyFood">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/LinearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Name:"
                android:id="@+id/lblName"
                android:textColor="#000000" />

            <EditText
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:id="@+id/etxtName"
                android:selectAllOnFocus="true"
                android:textColor="#525252"
                android:hint="Food name" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Brand:"
                android:id="@+id/lblBrand"
                android:textColor="#000000" />

            <EditText
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:id="@+id/etxtBrand"
                android:selectAllOnFocus="true"
                android:textColor="#525252"
                android:hint="Brand name"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Carbs:"
                android:id="@+id/Label_Carbs"
                android:textColor="#000000" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="5"
                android:id="@+id/EditText_Carbs"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView2"
                android:textColor="#797979"
                android:textAlignment="center"
                android:hint="0" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Protein:"
                android:id="@+id/Label_Protein"
                android:textColor="#000000" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5"
                android:id="@+id/EditText_Protein"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView"
                android:textColor="#797979"
                android:textAlignment="center"
                android:hint="0"
                android:inputType="numberDecimal" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Fat:"
                android:id="@+id/Label_Fat"
                android:textColor="#000000" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5"
                android:id="@+id/EditText_Fat"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView3"
                android:textColor="#797979"
                android:textAlignment="center"
                android:hint="0"
                android:inputType="numberDecimal" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <info.hoang8f.android.segmented.SegmentedGroup
                android:id="@+id/seggroupPortionType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:sc_border_width="2dp"
                app:sc_corner_radius="10dp">

                <RadioButton
                    android:id="@+id/rbtnServing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/serving"
                    style="@style/RadioButton"
                    android:checked="true"
                    android:layout_gravity="center_vertical|center_horizontal" />

                <RadioButton
                    android:id="@+id/rbtnWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weight"
                    style="@style/RadioButton"
                    android:layout_gravity="center_vertical|center_horizontal" />

            </info.hoang8f.android.segmented.SegmentedGroup>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Serving #:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Label_ServingNumber"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="@color/black" />

            <EditText
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:ems="5"
                android:id="@+id/EditText_ServingNumber"
                android:textAlignment="center"
                android:hint="1"
                android:text="1"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Quantity:"
                android:id="@+id/Label_Quantity"
                android:textColor="@color/text_color_selector"
                android:layout_weight="0.10" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="5"
                android:id="@+id/EditText_Quantity"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView2"
                android:textColor="#000000"
                android:textAlignment="center"
                android:hint="100"
                android:text="100"
                android:enabled="true" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Spinner_Unit"
                android:layout_weight="0.10" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Enter"
                android:id="@+id/Button_Enter"
                android:layout_weight="1"
                android:background="@drawable/btn_iifym_style" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:id="@+id/Button_Cancel"
                android:layout_weight="1"
                android:background="@drawable/btn_iifym_style" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
