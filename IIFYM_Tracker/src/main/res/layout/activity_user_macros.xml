<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/lblMacroBanner"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:text="IIFYM recommends the following energy and macronutrient daily intake"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:layout_height="75dp"
        android:textColor="?attr/colorPrimary"
        android:layout_marginTop="15dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/linearlayoutCalories"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin">

        <TextView
            android:text="Calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblCalories"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="?attr/colorPrimary"
            android:layout_weight="1"
            android:layout_gravity="center_vertical|center_horizontal" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number|numberDecimal"
            android:ems="1"
            android:id="@+id/etxtCalories"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:hint="1850"
            android:textColor="?attr/colorPrimary"
            android:textColorHint="?attr/colorPrimary"
            android:layout_weight="1"
            android:layout_gravity="center_vertical|center_horizontal" />

        <TextView
            android:text="kcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblCalorieUnit"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="?attr/colorPrimary"
            android:layout_weight="1"
            android:layout_gravity="center_vertical|center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/linearlayoutCarbs">

        <TextView
            android:text="Carbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblCarbs"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="?attr/colorPrimary"
            android:layout_weight="0.98"
            android:layout_gravity="center_vertical|center_horizontal"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number|numberDecimal"
            android:ems="1"
            android:id="@+id/etxtCarbs"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:hint="45"
            android:textColor="?attr/colorPrimary"
            android:textColorHint="?attr/colorPrimary"
            android:layout_weight="0.98"
            android:layout_gravity="center_vertical|center_horizontal" />

        <TextView
            android:text="%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblPercent1"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="?attr/colorPrimary"
            android:layout_weight="1.35"
            android:layout_gravity="center_vertical|center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/linearlayoutProtein">

        <TextView
            android:text="Protein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblProtein"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="?attr/colorPrimary"
            android:layout_weight="0.86"
            android:layout_gravity="center_vertical|center_horizontal"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number|numberDecimal"
            android:ems="1"
            android:id="@+id/etxtProtein"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:hint="35"
            android:textColor="?attr/colorPrimary"
            android:textColorHint="?attr/colorPrimary"
            android:layout_weight="0.98"
            android:layout_gravity="center_vertical|center_horizontal" />

        <TextView
            android:text="%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblPercent2"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="?attr/colorPrimary"
            android:layout_weight="1.37"
            android:layout_gravity="center_vertical|center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/linearlayoutFat">

        <TextView
            android:text="Fat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblFat"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="?attr/colorPrimary"
            android:layout_weight="1.28"
            android:layout_gravity="center_vertical|center_horizontal"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number|numberDecimal"
            android:ems="1"
            android:id="@+id/etxtFat"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:hint="20"
            android:textColor="?attr/colorPrimary"
            android:textColorHint="?attr/colorPrimary"
            android:layout_weight="0.98"
            android:layout_gravity="center_vertical|center_horizontal" />

        <TextView
            android:text="%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblPercent3"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="?attr/colorPrimary"
            android:layout_weight="1.36"
            android:layout_gravity="center_vertical|center_horizontal" />

    </LinearLayout>

    <CheckBox
        android:text="Percent"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/chkbxPercentVals"
        android:layout_gravity="center_vertical|center_horizontal|center"
        android:checked="true"
        android:gravity="center_vertical|center_horizontal|center"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:textColor="?attr/colorPrimary" />

    <TextView
        android:text="You can customize your macros and your daily caloric intake to the values you wish!"
        android:layout_width="wrap_content"
        android:id="@+id/kandy_textview"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:gravity="center_vertical|center_horizontal|center"
        android:layout_gravity="center_vertical|center_horizontal|center"
        android:paddingStart="75dp"
        android:paddingEnd="75dp"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp" />

    <Button
        android:text="Finish"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/btnCalc"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/btn_iifym_style"
        android:textColorHint="?attr/colorPrimary"
        android:textColor="?attr/colorPrimary"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin" />

</LinearLayout>