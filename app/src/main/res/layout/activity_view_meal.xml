<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kareem.macrotracker.Activities.ViewMealActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/EditText_Meal_Name"
                android:inputType="text"
                android:text="Meal_Name" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:ems="2"
                    android:id="@+id/EditText_Portion_Quantity"
                    android:inputType="number|numberDecimal"
                    android:text="Portion_Quantity" />

                <TextView
                    android:text="Servings"
                    android:layout_height="wrap_content"
                    android:id="@+id/Label_Serving"
                    android:layout_weight="1"
                    android:textAppearance="@android:style/TextAppearance.Material.Medium"
                    android:layout_width="wrap_content" />

                <Spinner
                    android:layout_height="wrap_content"
                    android:id="@+id/Spinner_Unit"
                    android:layout_width="177dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:ems="2"
                    android:id="@+id/EditText_Carbs"
                    android:text="Carbs:"
                    android:layout_weight="0.05"
                    android:inputType="numberDecimal" />

                <TextView
                    android:text="c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView32"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="2"
                    android:id="@+id/EditText_Protein"
                    android:text="Protein:"
                    android:layout_weight="0.05"
                    android:layout_width="75dp" />

                <TextView
                    android:text="p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView29"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_height="wrap_content"
                    android:ems="2"
                    android:id="@+id/EditText_Fat"
                    android:text="Fat:"
                    android:layout_weight="0.05"
                    android:layout_width="75dp"
                    android:inputType="numberDecimal" />

                <TextView
                    android:text="f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView27"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Calories: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Label_Calories"
                    tools:text="Calories: "
                    android:textAppearance="@android:style/TextAppearance.Material.Medium"
                    android:layout_weight="0.05" />

                <TextView
                    android:text="calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView25"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_mode_edit_black_24dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="308dp"
        android:id="@+id/edit_fab"
        app:backgroundTint="?attr/colorPrimary"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="300dp" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_delete"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="308dp"
        android:id="@+id/delete_fab"
        app:backgroundTint="@color/White"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="0dp" />

</RelativeLayout>
