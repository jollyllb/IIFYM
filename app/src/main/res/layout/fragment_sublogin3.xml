<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kareem.macrotracker.Activities.Goalsfrag">

    <!-- TODO: Update blank fragment layout -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText4"
            android:hint="e.g. 2 = 2 times/week"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            android:layout_marginTop="8dp"
            app:layout_constraintRight_toRightOf="@+id/editText3"
            android:layout_marginEnd="64dp" />

        <TextView
            android:text="Workout Frequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            tools:layout_constraintBottom_creator="1"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="109dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:text="% Fat"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textAlignment="textEnd"
            android:layout_width="0dp"
            app:layout_constraintRight_toLeftOf="@+id/editText3"
            tools:layout_constraintRight_creator="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="11dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/editText3"
            tools:layout_constraintBaseline_creator="1"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText3"
            android:hint="00%"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/textView8"
            app:layout_constraintRight_toRightOf="@+id/editText2"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="20dp"
            app:layout_constraintLeft_toLeftOf="@+id/editText2" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText2"
            android:hint="00%"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/editText3"
            android:layout_marginStart="7dp"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="8dp"
            app:layout_constraintLeft_toRightOf="@+id/textView6" />

        <TextView
            android:text="% Protein"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textAlignment="textEnd"
            android:layout_width="0dp"
            tools:layout_constraintRight_creator="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="@+id/editText"
            app:layout_constraintBaseline_toBaselineOf="@+id/editText2"
            tools:layout_constraintBaseline_creator="1"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText"
            android:hint="00%"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintBottom_creator="1"
            android:layout_marginStart="66dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView6"
            android:layout_marginTop="75dp"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="77dp"
            app:layout_constraintLeft_toLeftOf="@+id/goalSpinner"
            app:layout_constraintTop_toTopOf="@+id/goalSpinner" />

        <TextView
            android:text="% Carbs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textAlignment="textEnd"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/textView7"
            app:layout_constraintBaseline_toBaselineOf="@+id/editText"
            tools:layout_constraintBaseline_creator="1"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/textView6" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:id="@+id/goalSpinner"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="149dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/frag3text"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:textAlignment="center" />

</FrameLayout>
