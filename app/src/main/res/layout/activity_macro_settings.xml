<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_macro_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kareem.macrotracker.Activities.MacroSettings">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="500dp">

            <EditText
                android:layout_height="wrap_content"
                android:inputType="none"
                android:ems="10"
                android:id="@+id/txt_weight"
                android:hint="Weight"
                android:layout_width="100dp"
                app:layout_constraintRight_toLeftOf="@+id/txt_gender"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                android:editable="false"
                android:enabled="false" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:ems="10"
                android:id="@+id/txt_height"
                android:hint="Height"
                app:layout_constraintRight_toRightOf="@+id/txt_weight"
                app:layout_constraintLeft_toLeftOf="@+id/txt_weight"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_weight"
                android:editable="false"
                android:enabled="false" />
            <lecho.lib.hellocharts.view.PieChartView
                android:id="@+id/macro_chart"
                android:layout_width="336dp"
                android:layout_marginTop="80dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_height"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.33"
                android:layout_height="300dp" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:ems="10"
                android:id="@+id/txt_gender"
                android:hint="Gender"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="48dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                android:editable="false"
                android:enabled="false" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:ems="10"
                android:id="@+id/txt_goal"
                android:hint="Goal"
                app:layout_constraintRight_toRightOf="@+id/txt_gender"
                app:layout_constraintLeft_toLeftOf="@+id/txt_gender"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_gender"
                android:editable="false"
                android:enabled="false" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:ems="10"
                android:id="@+id/txt_workoutfreq"
                app:layout_constraintRight_toRightOf="@+id/txt_height"
                app:layout_constraintLeft_toLeftOf="@+id/txt_height"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_height"
                android:hint="Workout"
                android:editable="false"
                android:enabled="false" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:ems="10"
                android:id="@+id/txt_age"
                app:layout_constraintRight_toRightOf="@+id/txt_goal"
                app:layout_constraintLeft_toLeftOf="@+id/txt_goal"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_goal"
                android:hint="Age"
                android:editable="false"
                android:enabled="false" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</RelativeLayout>
