<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearlayoutGender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_weight="0.5"
                    android:text="@string/gender"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="14sp" />

                <info.hoang8f.android.segmented.SegmentedGroup
                    android:id="@+id/seggroupGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_margin="10dp"
                    android:layout_weight="0.5"
                    android:gravity="right|center"
                    android:orientation="horizontal"
                    app:sc_border_width="2dp"
                    app:sc_corner_radius="10dp">

                    <RadioButton
                        android:id="@+id/rbtnGenderMale"
                        style="@style/RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:checked="true"
                        android:text="@string/male" />

                    <RadioButton
                        android:id="@+id/rbtnGenderFemale"
                        style="@style/RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:text="@string/female" />

                </info.hoang8f.android.segmented.SegmentedGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearlayoutHeightWeight"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linearlayoutHeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etxtHeightParam1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.8"
                        android:ems="1"
                        android:gravity="center"
                        android:hint="@string/height"
                        android:inputType="number|numberDecimal"
                        android:maxLength="3"
                        android:textAlignment="center"
                        android:textColor="?attr/colorPrimary"
                        android:textColorHint="?android:attr/textColorHint"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/lblHeightUnit1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="@string/cm"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:textColor="?attr/colorPrimary"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/etxtHeightParam2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0"
                        android:ems="1"
                        android:gravity="center"
                        android:hint="Height"
                        android:inputType="number|numberDecimal"
                        android:maxLength="2"
                        android:textAlignment="center"
                        android:textColor="?attr/colorPrimary"
                        android:textColorHint="?android:attr/textColorHint"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/lblHeightUnit2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0"
                        android:gravity="center"
                        android:text="in"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:textColor="?attr/colorPrimary"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearlayoutWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etxtWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.8"
                        android:ems="1"
                        android:hint="@string/weight"
                        android:inputType="number|numberDecimal"
                        android:maxLength="7"
                        android:textAlignment="center"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="?attr/colorPrimary"
                        android:textColorHint="?android:attr/textColorHint"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/lblWeightUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="@string/kg"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:textColor="?attr/colorPrimary" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearlayoutWorkoutFreq"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblWorkoutFreq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/workoutFrequency"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spinnerWorkoutFreq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_weight="0.8"
                    android:gravity="right|center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearlayoutGoals"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblGoals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/goals"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spinnerGoals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_weight="0.8"
                    android:gravity="right|center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal|center"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_weight="0.5"
                android:gravity="right|center_horizontal|center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="0.25"
                    android:gravity="right"
                    android:paddingRight="15dp">

                    <ImageButton
                        android:id="@+id/btnInfo"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="right"
                        android:background="@drawable/icon_info_selector"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/ic_info" />
                </RelativeLayout>

                <info.hoang8f.android.segmented.SegmentedGroup
                    android:id="@+id/seggroupDisplay"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical|center_horizontal|center"
                    android:gravity="center_vertical|center_horizontal|center"
                    android:orientation="horizontal"
                    app:sc_border_width="2dp"
                    app:sc_corner_radius="10dp">

                    <RadioButton
                        android:id="@+id/rbtnCalories"
                        style="@style/RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:checked="true"
                        android:text="@string/radioBtnCalories" />

                    <RadioButton
                        android:id="@+id/rbtnMacros"
                        style="@style/RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:checked="false"
                        android:text="@string/radioBtnMacros" />

                </info.hoang8f.android.segmented.SegmentedGroup>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_weight="0.25"
                    android:gravity="left"
                    android:paddingLeft="15dp">

                    <ImageButton
                        android:id="@+id/btnReset"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/icon_reset_selector"
                        android:scaleType="fitCenter" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal|center"
                android:layout_weight="0.5"
                android:gravity="center_vertical|center_horizontal|center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearlayoutCalories"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <EditText
                        android:id="@+id/etxtCalories"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:ems="1"
                        android:gravity="center_vertical|center"
                        android:inputType="number"
                        android:maxLength="5"
                        android:text="xy"
                        android:textAppearance="@android:style/TextAppearance.Material.Small"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="?android:attr/textColorHint" />

                    <TextView
                        android:id="@+id/lblCalories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="left|center_vertical"
                        android:text="@string/lblCalories"
                        android:textAppearance="@android:style/TextAppearance.Material.Small"
                        android:textColor="@color/colorPrimary" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearlayoutCarbs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <EditText
                        android:id="@+id/etxtCarbs"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:ems="1"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="4"
                        android:text="50"
                        android:textAppearance="@android:style/TextAppearance.Material.Small"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="?android:attr/textColorHint" />

                    <TextView
                        android:id="@+id/lblCarbs"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="left|center_vertical"
                        android:text="@string/lblCarbs"
                        android:textAppearance="@android:style/TextAppearance.Material.Small"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/lblValueCarbs"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center_vertical|center"
                        android:text="(xxx g)"
                        android:textColor="@color/Custom_Grey"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearlayoutProtein"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etxtProtein"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:ems="1"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="4"
                        android:text="25"
                        android:textAppearance="@android:style/TextAppearance.Material.Small"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="?android:attr/textColorHint" />

                    <TextView
                        android:id="@+id/lblProtein"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="left|center_vertical"
                        android:text="@string/lblProtein"
                        android:textAppearance="@android:style/TextAppearance.Material.Small"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/lblValueProtein"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="(yyy g)"
                        android:textColor="@color/Custom_Grey"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearlayoutFat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <EditText
                        android:id="@+id/etxtFat"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:ems="1"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="4"
                        android:text="25"
                        android:textAppearance="@android:style/TextAppearance.Material.Small"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="?android:attr/textColorHint" />

                    <TextView
                        android:id="@+id/lblFat"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="left|center_vertical"
                        android:text="@string/lblFat"
                        android:textAppearance="@android:style/TextAppearance.Material.Small"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/lblValueFat"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="(zzz g)"
                        android:textAppearance="@android:style/TextAppearance.Material.Small"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearlayoutTotal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="7dp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/lblAmountTotal"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:ems="4"
                        android:gravity="center"
                        android:hint="100"
                        android:textAppearance="@android:style/TextAppearance.Material.Small"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/lblTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="left|center_vertical"
                        android:text="@string/lblTotal"
                        android:textAppearance="@android:style/TextAppearance.Material.Small"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>